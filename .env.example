# JSON Expert - Environment Configuration

# Application Settings
VITE_APP_NAME=JSON Expert
VITE_APP_VERSION=1.0.0

# Domain Configuration
# Add your domains separated by commas (for CORS and security)
VITE_ALLOWED_DOMAINS=jsonexpert.com,localhost,127.0.0.1

# API Configuration (if using external APIs)
# VITE_API_BASE_URL=https://api.example.com
# VITE_API_TIMEOUT=30000

# File Upload Settings
VITE_MAX_FILE_SIZE=104857600  # 100MB in bytes
VITE_ALLOWED_FILE_TYPES=.json,.geojson,.jsonl,.ndjson,.txt

# Development Settings
VITE_DEV_PORT=12355
VITE_DEV_HOST=0.0.0.0

# Docker Deployment
PORT=12355

# Production Settings
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Feature Flags
VITE_ENABLE_SCHEMA_VALIDATION=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_URL_FETCH=true

# Security
# Add your CSP directives if needed
# VITE_CSP_DIRECTIVES=default-src 'self'

# Deployment (Docker)
PORT=80
NODE_ENV=production
